# Application Settings
APP_NAME="Physical AI Textbook API"
DEBUG=false

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Qdrant Cloud Configuration
# Create account at: https://cloud.qdrant.io/
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=book_embeddings

# Neon Serverless Postgres
# Create database at: https://neon.tech/
DATABASE_URL=postgresql://user:password@your-project.neon.tech/dbname?sslmode=require

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,https://your-github-pages-url.github.io

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
